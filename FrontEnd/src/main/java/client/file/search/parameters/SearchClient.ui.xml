<ui:UiBinder
        xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:c="urn:import:com.sencha.gxt.widget.core.client"
        xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
        xmlns:form="urn:import:com.sencha.gxt.widget.core.client.form"
        xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button">

    <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData"
             field="verticalLayoutData">
        <ui:attributes width="1" height="-1"/>
    </ui:with>


    <g:VerticalPanel spacing="10">

        <c:FramedPanel headingText="Parametry wyszukiwania" bodyStyle="background: none; padding: 15px">
            <container:VerticalLayoutContainer>

                <container:child layoutData="{verticalLayoutData}">
                    <form:FieldLabel text="Numer Klienta">
                        <form:widget>
                            <form:TextField ui:field="clientNo"/>
                        </form:widget>
                    </form:FieldLabel>
                </container:child>

                <container:child layoutData="{verticalLayoutData}">
                    <form:FieldLabel text="ImiÄ™">
                        <form:widget>
                            <form:TextField ui:field="name"/>
                        </form:widget>
                    </form:FieldLabel>
                </container:child>

                <container:child layoutData="{verticalLayoutData}">
                    <form:FieldLabel text="Nazwisko">
                        <form:widget>
                            <form:TextField ui:field="surname"/>
                        </form:widget>
                    </form:FieldLabel>
                </container:child>

                <container:child layoutData="{verticalLayoutData}">
                    <form:FieldLabel text="Data urodzenia">
                        <form:widget>
                            <form:DateField ui:field="dateOfBirth"/>
                        </form:widget>
                    </form:FieldLabel>
                </container:child>

                <container:child layoutData="{verticalLayoutData}">
                    <form:FieldLabel text="Email">
                        <form:widget>
                            <form:TextField ui:field="pesel"/>
                        </form:widget>
                    </form:FieldLabel>
                </container:child>


                <button:TextButton text="Wyszukaj" ui:field="search"/>
            </container:VerticalLayoutContainer>






        </c:FramedPanel>


    </g:VerticalPanel>

</ui:UiBinder>